<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.svizeautomation.app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.svizeautomation.app.application.BluetoothViewerFullApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.HomeScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppcompactTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".screens.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.UserDialog"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name=".screens.PasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.UserDialog"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name=".screens.CreateRoomActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppcompactTheme"
            android:windowSoftInputMode="stateHidden"></activity>

        <activity
            android:name=".screens.EditRoomActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppcompactTheme"
            android:windowSoftInputMode="stateHidden"></activity>


        <activity
            android:name=".DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_select_device"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_settings_activity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>
