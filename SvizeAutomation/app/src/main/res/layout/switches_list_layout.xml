<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/switchContainerHeaderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/switchName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.9"
            android:gravity="center"
            android:padding="5dp"
            android:text="Switch"
            android:textSize="16dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/inputPinEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.6"
            android:gravity="center">

            <com.svizeautomation.app.util.MySwitch
                android:id="@+id/switchMaterialButton"
                style="@style/mySwitchStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:backgroundMask="@drawable/smask_background_copy"
                app:leftBackground="@drawable/sleft_background_copy1"
                app:pushStyle="true"
                app:rightBackground="@drawable/sright_background_copy1"
                app:textOff="ON"
                app:textOn="OFF"
                app:textOnThumb="false"
                app:thumb="@drawable/stoggle_copy1"
                app:thumbExtraMovement="27dp"
                app:trackTextPadding="2dp"
                app:track_x="@drawable/sgroove_copy" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

</LinearLayout>