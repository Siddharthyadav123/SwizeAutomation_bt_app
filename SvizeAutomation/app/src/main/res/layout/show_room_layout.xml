<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/roomHeaderLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Control Your Room Switchs"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <com.rey.material.widget.Spinner
        android:id="@+id/roomSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomHeaderLabelTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/deleteImageView"
        android:background="@color/grey"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="18dp"
        android:textStyle="bold"></com.rey.material.widget.Spinner>


    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/roomSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/roomSpinner"
        android:layout_marginRight="10dp"
        android:background="@color/grey"
        android:padding="5dp"
        android:src="@drawable/black_delete_icon" />

    <TextView
        android:id="@+id/macAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomSpinner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/btConnectedImageView"
        android:background="@color/grey"
        android:gravity="center"
        android:padding="9dp"
        android:text="MAC address"
        android:textSize="17dp" />


    <ImageView
        android:id="@+id/btConnectedImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/macAddressTextView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/macAddressTextView"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/redd"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/toolbar_btn_connect" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btConnectedImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:indeterminateOnly="true"
        android:visibility="gone" />


    <include
        layout="@layout/remote_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadingProgressBar"
        android:layout_marginTop="10dp" />


    <RelativeLayout
        android:id="@+id/switchesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadingProgressBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/switchContainerHeaderlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="Switch" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:gravity="center"
                android:text="On/Off" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/switchsContainerBodyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchContainerHeaderlayout"
            android:orientation="vertical"
            android:padding="5dp"></LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/allSwitchContainerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchesRelativeLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/switchName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.9"
            android:gravity="center"
            android:padding="5dp"
            android:text="All"
            android:textColor="@color/redd"
            android:textSize="17dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/inputPinEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.6"
            android:gravity="center">

            <Switch
                android:id="@+id/allSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:showText="true"
                android:text=""
                android:textColor="@color/white"
                android:textOff="OFF"
                android:textOn="ON"
                android:thumb="@drawable/switch_custom_thumb"
                android:track="@drawable/switch_custom_track" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>